.order-enter
  transform: translatex(-120%)
  transition all .5s
  max-height: 0
  padding: 0 !important
  &.order-enter-active
    max-height: 60px
    transform: translatex(0)
    padding 2rem 0 !important

.order-exit
  transform: translatex(0)
  transition all .5s
  &.order-exit-active
    transform: translatex(120%)
    padding 0

.count-enter
  transition all .25s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0)
  &.count-exit-active
    transform translateY(-100%)


